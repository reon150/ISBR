# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
PRODUCTS_DB_NAME=products_db
PRODUCTS_DB_PORT=5432
INVENTORY_DB_NAME=inventory_db
INVENTORY_DB_PORT=5433

# Redis Configuration
REDIS_PORT=6379

# Kafka Configuration
KAFKA_PORT=9092
KAFKA_INTERNAL_PORT=9093
KAFKA_ZOOKEEPER_PORT=2181
KAFKA_SESSION_TIMEOUT=30000
KAFKA_HEARTBEAT_INTERVAL=3000
KAFKA_INITIAL_RETRY_TIME=300
KAFKA_MAX_RETRIES=10
KAFKA_TRANSACTION_TIMEOUT=30000
KAFKA_LOG_RETENTION_HOURS=168
KAFKA_LOG_SEGMENT_BYTES=1073741824

# Kafka UI
KAFKA_UI_PORT=8080

# API Gateway
API_GATEWAY_PORT=80

# Application Configuration
NODE_ENV=production
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
EXCHANGE_RATE_API_KEY=your-api-key-here
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# Microservices Ports
PRODUCTS_SERVICE_PORT=3001
INVENTORY_SERVICE_PORT=3002

# Cache TTL (in seconds)
CACHE_TTL_PRODUCTS=300
CACHE_TTL_INVENTORY=300
CACHE_TTL_EXCHANGE_RATES=3600

# Event Cleanup Configuration
EVENT_RETENTION_DAYS=30
EVENT_CLEANUP_CRON=0 2 * * *

# Logs Configuration
LOGS_DIR=./logs
MAX_ERROR_LOGS=1000
