NODE_ENV=development
PORT=3002

# Database
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=postgres
DB_PASSWORD=postgres123
DB_NAME=inventory_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=inventory-service
KAFKA_GROUP_ID=inventory-consumer-group

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Cache TTL (in seconds)
CACHE_TTL_INVENTORY=300

# Event Cleanup (days to retain processed events)
# Events older than this will be deleted automatically daily at 2 AM
EVENT_RETENTION_DAYS=30

# Logs
LOGS_DIR=./logs
